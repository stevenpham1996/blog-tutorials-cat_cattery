<odoo>
    <template>
        <div class="page">
            <!-- Report header content -->
            <div class="container">
                <div class="row bg-primary">
                <div class="col-3">Name</div>
                <div class="col-3">Breed</div>
                <div class="col-3">Age</div>
                <div class="col-3">Color</div>
                <div class="col-3">State</div>
            </div>
            <!-- Report content -->
            <t t-foreach="docs" t-as="o">
                <div class="row">
                    <div class="col-3">
                        <span t-field="o.name" />
                    </div>
                    <div class="col-3">
                        <span t-field="o.breed" />
                    </div>
                    <div class="col-3">
                        <span t-field="o.age" />
                    </div>
                    <div class="col-3">
                        <span t-field="o.color" />
                    </div>
                    <div class="col-3">
                        <span t-field="o.state" 
                        t-options="[{'value': 'available', 'string': 'Available'}, {'value': 'adopted', 'string': 'Adopted'}]"/>
                    </div>
                </div>
            </t>
            <!-- Report footer content -->
            </div> <!-- container -->
        </div> <!-- page -->
    </template>
</odoo>